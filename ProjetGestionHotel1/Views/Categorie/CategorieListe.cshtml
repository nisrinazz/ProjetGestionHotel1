@model IEnumerable<ProjetGestionHotel1.Models.categorie>
@{
    Layout = null;
}
<div class="sidebar-box ftco-animate">
    <div class="categories">
        <h3>Categories</h3>
        @foreach (var item in Model)
        {
            <li>
                <a href="@Url.Action("ChambresParCat", "chambres", new {cat = item.nom_categorie})">
                    @Html.DisplayFor(modelitem => item.nom_categorie)
                    @{var num = item.chambre.Count();
                    }
                    <span>@num</span>
                </a>
        </li>}

    </div>
</div>



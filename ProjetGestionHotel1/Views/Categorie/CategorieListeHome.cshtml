@model IEnumerable<ProjetGestionHotel1.Models.categorie>



@{ 

    Layout = null;
}


@foreach (var item in Model)
{
    <div class="col-lg-6">
        <div class="room-wrap d-md-flex">

            <a href="rooms-single.html" class="img" style="background-image:url(data:image/gif;base64,@Convert.ToBase64String(item.chambre.First().images.First().image_file));"></a>
            <div class="half left-arrow d-flex align-items-center">
                <div class="text p-4 p-xl-5 text-center">
                    <p class="star mb-0"><span class="ion-ios-star"></span><span class="ion-ios-star"></span><span class="ion-ios-star"></span><span class="ion-ios-star"></span><span class="ion-ios-star"></span></p>
                    <h3 class="mb-3"><a href="#">@Html.DisplayFor(modelItem => item.nom_categorie)<span>s</span></a></h3>
                    <p class="pt-1"><a href="@Url.Action("ChambresParCat", "chambres",new { cat = item.nom_categorie})" class="btn-custom px-3 py-2">View List of @Html.DisplayFor(modelItem => item.nom_categorie)s <span class="icon-long-arrow-right"></span></a></p>
                </div>
            </div>
        </div>
    </div>
}
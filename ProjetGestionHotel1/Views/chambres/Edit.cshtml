@model ProjetGestionHotel1.Models.chambre

@{
    ViewBag.Title = "Edit";
}
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-sm-8 offset-sm-2">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Room Modification Form</h4>
                        <p class="card-description">
                            Edit Rooms informations
                        </p>


                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">

                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.id_chambre)

                                <div class="form-group">
                                    @Html.LabelFor(model => model.num_chambre, "Room No :", htmlAttributes: new { @class = "col-sm-3 col-form-label" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.num_chambre, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.num_chambre, "", new { @class = "text-danger" })
                                    </div>
                                </div>


                                <div class="form-group">
                                    @Html.LabelFor(model => model.nom_categorie, "Category Name :", htmlAttributes: new { @class = "col-sm-3 col-form-label" })
                                    <div class="col-md-10">
                                        @Html.DropDownList("nom_categorie", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.nom_categorie, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-primary me-2">Submit</button>
                            </div>
                        }


                    </div>
                </div>
            </div>
        </div>
        <p style="margin-left:200px; margin-top:20px;">
            @Html.ActionLink(" Back", "Index", "administrateurs", null, new { @class = "btn btn-primary me-2 text-white mdi mdi-arrow-left-bold" })
        </p>
    </div>
</div>
@model ProjetGestionHotel1.Models.reservation

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}



<div class="hero-wrap" style="background-image: url('/Content/images/bg_1.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text d-flex align-itemd-end justify-content-center">
            <div class="col-md-9 ftco-animate text-center d-flex align-items-end justify-content-center">
                <div class="text">
                    <h1 class="mb-4 bread">Book your room now</h1>
                </div>
            </div>
        </div>
    </div>
</div>
@using (Html.BeginForm())
{
    <div class="row" style="display:flex; justify-content:space-between;">

        <div class="col">

            @Html.AntiForgeryToken()
            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.debut_reservation, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.debut_reservation, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                        @Html.ValidationMessageFor(model => model.debut_reservation, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.nbr_personne, htmlAttributes: new { @class = "control-label col-lg-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.nbr_personne, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.nbr_personne, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

        </div>
        <div class="col">

            <div class="form-group">
                @Html.LabelFor(model => model.fin_reservation, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.fin_reservation, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                    @Html.ValidationMessageFor(model => model.fin_reservation, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Book" class="book-form-btn" />
                </div>
            </div>
        </div>
        
    </div>
}






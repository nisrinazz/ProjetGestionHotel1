<!DOCTYPE html>
<html lang="en">
<head>
    @model ProjetGestionHotel1.Models.client


    @{
        ViewBag.Title = "Create";
        Layout = null;
    }
    <meta charset="UTF-8">
    <title>Sign Up</title>
    <link rel="stylesheet" href="/Content/loginstyle/style.css">

    <style>
        .error {
            color: rgb(219, 51, 51);
            font-size: 15px;
            margin-left: 40px;
            padding-top: 10px;
            padding-bottom: 10px;
            padding-left: 10px;
            padding-right: 10px;
            background-color: rgba(255, 255, 255,0.6);
            border-radius: 4px;
            border-color: rgb(219, 51, 51,0.4);
            border-width: 1px;
            border-style: solid;
            font-weight: bold;
            margin-top: -20px;
        }
    </style>
</head>

<div class="form-structor">
    <div class="signup">
        <div class="form-holder">
            @using (Html.BeginForm())
            {<h2 class="form-title" id="login">Log in</h2>
                <div class="form-holder">
                    <input type="text" name="login" class="input" placeholder="Login" />
                    <input type="password" name="password" class="input" placeholder="Password" />
                </div>
                <button class="submit-btn">Log in</button>}


            @if (@TempData["message"] != null)
            {
                <span class="error">@TempData["message"]</span>
            }
        </div>

    </div>
    <div class="login slide-up">
        <div class="center">
            <a href="@Url.Action("SignUp","clients")"><h2 class="form-title" id="login"><span>or</span>Sign Up</h2></a>
        </div>
    </div>
</div>
<!-- partial -->
<script src="/Content/loginstyle/script.js"></script>

</body>
</html>



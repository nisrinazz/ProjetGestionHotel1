@model ProjetGestionHotel1.Controllers.commentairesController.SentimentModel.ModelInput

@{
    ViewBag.Title = "Create";
    Layout = null;
}




        <div class="comment-form-wrap pt-5">
            <h3 class="mb-5">Leave a comment</h3>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.New_reviews, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.New_reviews, new { htmlAttributes = new { @class = "form-control", id="content-area" , rows = 10, cols = 40 } })
                    @Html.ValidationMessageFor(model => model.New_reviews, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Post Comment" class="btn py-3 px-4 btn-primary" id="button" onclick="clear();">
                </div>

            }
            </div>


<script>
    function clear(){
        document.getElementById("content-area").value = " ";
    }
</script>


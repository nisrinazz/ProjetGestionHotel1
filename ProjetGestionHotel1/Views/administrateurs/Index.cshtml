                                                                                        </td>
                                                                                        <td>
                                                                                            @Html.DisplayFor(modelItem => item.email_admin, new { htmlAttributes = new { @class = "d-flex" } })
                                                                                        </td>
                                                                                        <td>
                                                                                            @Html.DisplayFor(modelItem => item.tel_admin, new { htmlAttributes = new { @class = "d-flex" } })
                                                                                        </td>

